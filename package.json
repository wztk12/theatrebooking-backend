{
  "name": "todo",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "jest --coverage",
    "watch": "node_modules/.bin/jest --coverage --watchAll",
    "lint": "node_modules/.bin/eslint . --fix",
    "precommit-msg": "echo 'Pre-commit checks...' && exit 0",
    "prepush-msg": "echo 'Pre-push checks...' && exit 0"
  },
  "pre-commit": [
    "precommit-msg",
    "lint",
    "test"
  ],
  "pre-push": [
    "prepush-msg",
    "lint",
    "test"
  ],
  "jest": {
    "testEnvironment": "node",
    "verbose": true,
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": -10
      }
    }
  },
  "author": "Wiktor Zatonski",
  "license": "ISC",
  "dependencies": {
    "csprng": "^0.1.2",
    "eslint": "^5.9.0",
    "http-status-codes": "^1.3.0",
    "koa": "^2.6.1",
    "koa-bodyparser": "^4.2.1",
    "koa-router": "^7.4.0",
    "mongoose": "^5.3.13"
  },
  "devDependencies": {
    "jest": "^23.6.0",
    "pre-commit": "^1.2.2",
    "pre-push": "^0.1.1",
    "supertest": "^3.3.0"
  }
}
